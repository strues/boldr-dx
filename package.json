{
  "name": "boldr-dx",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "betterScripts": {
    "start:server": {
      "command": "nodemon",
      "env": {
        "NODE_PATH": "src",
        "NODE_ENV": "development"
      }
    },
    "compile:server": {
      "command": "babel src/server -d dist/server",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test:api": {
      "command": "mocha --compilers js:./compiler './src/server/**/*-test.js'",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "scripts": {
    "clean:dist": "rm -rf static/dist",
    "compile": "NODE_ENV=production babel-node ./node_modules/.bin/webpack --optimize-minimize --progress --config ./tools/webpack/prod.config",
    "compile:server": "better-npm-run compile:server",
    "deploy": "npm run clean:dist && npm run compile && npm run prod",
    "lint": "./node_modules/.bin/eslint src/common/**/*.js src/common/**/*.jsx src/server/**/*.js",
    "prod": "NODE_PATH=src NODE_ENV=production babel-node src/server/index.js",
    "start": "concurrently --kill-others --raw \"npm run start:client\" \"npm run start:server\"",
    "start:client": "babel-node -- tools/webpack/dev.server.js",
    "start:server": "better-npm-run start:server",
    "test": "better-npm-run test:api",
    "test:api": "better-npm-run test:api",
    "update-deps": "bash tools/scripts/updateDeps.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr-dx.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/strues/boldr-dx/issues"
  },
  "homepage": "https://github.com/strues/boldr-dx#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-module-alias": "^1.4.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.9.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-react-optimize": "^1.0.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "better-npm-run": "0.0.8",
    "concurrently": "^2.1.0",
    "css-loader": "^0.23.1",
    "del": "^2.2.0",
    "eslint": "^2.12.0",
    "eslint-config-axial": "^1.0.8",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.8.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "json-loader": "^0.5.4",
    "koa-webpack-dev-middleware": "^1.2.1",
    "koa-webpack-hot-middleware": "^1.0.3",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "postcss-import": "^8.1.2",
    "postcss-loader": "^0.9.1",
    "raw-loader": "^0.5.1",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "stylelint": "^6.6.0",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "koa": "^2.0.0",
    "koa-bodyparser": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-logger": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "react": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-helmet": "^3.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.5.2",
    "redux-logger": "^2.6.1",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.1.0",
    "require-hacker": "^2.1.3"
  }
}
